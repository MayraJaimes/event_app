<div class="homeContainer">

    <header>     
        <div class="create">
            <p class="gobtn"><a href="/create"> Create Event <i class="fas fa-plus"></i> </a></p>
        </div>
     </header>

<div class="homeWrapper">
    <div>
        <h2 class="eventsList">Your Events</h2>
        <ul class="eventsUl">    
            {{#each events}}
                <li class="eventsUl">
                    <h3 class="name">{{this.event_name}}</h3>
                    <p class="date">{{formatDate this.event_date "MM/DD/YYYY"}} </p>
                    <a href="/events/{{this.id}}"><p class="gobtn"> DETAILS >> </p></a>
                </li>
            {{else}}
                <p>You have no events yet. Please click the button below to create one!</p>
            {{/each}}
        </ul>
    </div>

</div>


<script>
$('#eventButtonText').on('click', function() {
  if($('#inputDIV').hasClass('hidden')) {
     $(this).html("Hide Create Form");
    $('#inputDIV').css('display', 'block');
    $('#inputDIV').removeClass('hidden');
    $('#inputDIV').addClass('show');
     } else {
     $(this).html("Create Event");
    $('#inputDIV').css('display', 'none');
  $('#inputDIV').removeClass('show');
    $('#inputDIV').addClass('hidden');     
   } 
});

</script>

</div>