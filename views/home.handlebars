<div class="homeContainer">

    <header>
        <div class="create">
            <p class="gobtn">
                <a href="/create"> Create Event
                    <i class="fas fa-plus"></i>
                </a>
            </p>
        </div>
    </header>

    <div class="homeWrapper">
        <div>
            <h2 class="eventsList">Your Events</h2>
            <ul class="eventsUl">
                {{#each events}}
                <li class="eventsUl">
                    <h3 class="name">{{this.event_name}}</h3>
                    <p class="date">{{formatDate this.event_date "MM/DD/YYYY"}} </p>
                    <a href="/events/{{this.id}}">
                        <p class="gobtn"> DETAILS <i class="fas fa-angle-double-right"></i> </p>
                    </a>
                    <hr class="allEventsHome">
                </li>
                {{else}}
                <p>You have no events yet. Please click the button below to create one!</p>
                {{/each}}
            </ul>
        </div>

    </div>


</div>